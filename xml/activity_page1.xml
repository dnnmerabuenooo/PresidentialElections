<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#BD0606"
    tools:context=".Page1">

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/black"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ph"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="times"
        android:text=""
        android:textColor="#FFFFFF"
        android:layout_marginLeft="100dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/voter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER YOUR CHOSEN CANDIDATES"
        android:textAlignment="center"
        android:layout_marginTop="150dp"
        android:textColor="#FFFFFF"
        android:fontFamily="times"
        android:textStyle="bold"
        android:textSize="40dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="350dp"
        android:background="@color/white"
        android:textAlignment="center"
        android:hint="Enter President"
        android:textColorHint="#FF958181"
        android:textSize="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/black"
        android:id="@+id/pres"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="400dp"
        android:background="@color/white"
        android:textAlignment="center"
        android:hint="Enter Vice President"
        android:textColorHint="#958181"
        android:textSize="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/black"
        android:id="@+id/vice"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_gravity="center"
        android:text="Submit"
        android:textSize="20dp"
        android:onClick="Proceed"
        android:textColor="@color/white"
        android:backgroundTint="#0C3587"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="682dp"
        android:background="@android:color/black"/>

</RelativeLayout>
