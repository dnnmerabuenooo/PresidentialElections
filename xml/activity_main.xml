<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#FFBD0606">

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0C3587"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ph"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRESIDENTIAL ELECTIONS 2022"
        android:textAlignment="center"
        android:layout_marginTop="150dp"
        android:textColor="#FFFFFF"
        android:fontFamily="times"
        android:textStyle="bold"
        android:textSize="45dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="350dp"
        android:background="@color/white"
        android:textAlignment="center"
        android:hint="Enter name"
        android:textColorHint="#FF958181"
        android:textSize="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/black"
        android:id="@+id/home"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="400dp"
        android:background="@color/white"
        android:textAlignment="center"
        android:hint="Enter age"
        android:textColorHint="#FF958181"
        android:textSize="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/black"
        android:id="@+id/age"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="470dp"
        android:text="Submit"
        android:textSize="20dp"
        android:onClick="submitAge"
        android:textColor="@color/white"
        android:backgroundTint="#0C3587"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="682dp"
        android:background="#0C3587"/>

</RelativeLayout>
